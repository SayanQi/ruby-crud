<%= render 'navbar' %>

<div class="container">
<h1 class="text-center my-4">All Students</h1>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Address</th>
        <th>Class</th>
        <th>School</th>
        <th>Medium</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.age %></td>
          <td><%= student.address %></td>
          <td><%= student.class %></td>
          <td><%= student.school %></td>
          <td><%= student.medium %></td>
          <td><%= student.email %></td>
          <td><%= student.phone %></td>
          <td class="d-flex">
            <%= link_to "Edit", edit_student_path(student), class: "btn btn-primary btn-sm mx-1" %>
            <%= button_to "Delete", student, method: :delete, confirm: "Are you sure?", class: "btn btn-danger btn-sm"%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New Student", new_student_path, class: "btn btn-success" %>
</div>

</div>

